#
# ~/.bash_aliases
#

### Aliases  ###
alias mutt="neomutt"
alias scim="sc-im --autocalc --xlsx_readformulas "
alias urxvt="rxvt-unicode"
alias xclip="xclip -selection c"

### Changing Directory ###
alias certs="cd /home/vsage/Documents/Certs/"
alias coding="cd /home/vsage/Documents/Coding/"
alias cBA="cd /home/vsage/Documents/Coding/bash"
alias cPY="cd /home/vsage/Documents/Coding/py"
alias finances="cd /home/$USER/Documents/Personal/Finances"
alias students="cd /home/vsage/Documents/Work/Students/"
alias work="cd /home/vsage/Documents/Work/"

### Opening a File ###
alias sIP="scim /home/vsage/Documents/Personal/Notes/installed_programs.sc"
alias vBA="vim /home/vsage/.bash_aliases"
alias vBRC="vim /home/vsage/.bashrc"
alias vCRC="vim /home/vsage/.config/.compton.conf"
alias vI3BL="vim /home/vsage/.config/i3/i3blocks.conf"
alias vI3RC="vim /home/vsage/.config/i3/config"
alias vRIF="vim /home/vsage/.config/ranger/rifle.conf"
alias vRRC="vim /home/vsage/.config/ranger/rc.conf"
alias vRC="vim /home/vsage/.vimrc"

### Scripts ###
alias herolab="wine /home/vsage/.wine/drive_c/Program\ Files\ \(x86\)/Hero\ Lab/HeroLab.exe"

alias logout="pkill -u $USER"
